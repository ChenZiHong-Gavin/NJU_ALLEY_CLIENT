/* pages/conversation/conversation.wxss */
page{
  background: #3EB575;
  height: 100%;
  width: 100%;
}

.title{
  font-size: x-large;
  color:white;
  margin-top: 50px;
 }
 .title-icon
 {
   /* 用于使返回按钮和文字处于同一行 */
   position: absolute;
   margin-left: 20px;
   text-align: left;
 }
 
 .title-word
 {
   text-align: center;
 }
 

.all{
  margin-top:90px;
}

.comment_content{
  
  display:flex;
  flex-direction: column;
}

.comment_user{
  display: flex;
  flex-direction: row;
  margin-left: 10px;
  position: relative;
}

.user_avatar{
  border-radius: 50%;
  width:40px;
  height: 40px;
}

.user_name{
  font-weight: 900;
  font-size: 15px;
  margin-left: 15px;
  margin-top:6px;
}

.create_time{
  position: absolute;
  right:10px;
  margin-top:6px;
  font-size: 10px;
}

.content{
  display:flex;
  flex-direction: row;
}
.content_text{
  margin-top:10px;
  margin-left: 15px;
  margin-right:15px;
  font-size:18px;
  
  display: -webkit-box;
  word-break: break-all;
}

.content_text.hide{
   /*规定子元素的排列方向 */
   -webkit-box-orient: vertical;
   /*限制文本显示的行数  */
   -webkit-line-clamp: 2;
   /*实现多余的文字隐藏并用省略号来代表被隐藏的文字  */
   overflow: hidden;
   text-overflow: ellipsis;
}


.children_text
{
  margin-top:10px;
  margin-left: 15px;
  margin-right:15px;
  font-size:18px;
  height:50px;
  word-break: break-all;
}

.picture{
  margin-top:10px;
  margin-left: 5px;
  height:50px;
  width:65px;
}
.data{
  margin-top:10px;
}

.likeNum_btn{
  margin-left: 10px;
}

.likeNum_text{
  margin-left: 10px;
  color: #3EB575;
  font-size:15px;
}

.comment_btn{
  margin-left: 10px;
}
.comment_text{
  color:#3EB575;
  margin-left: 10px;
}

.children{
  display: flex;
  flex-direction: column;
  margin-top: 10px;
}

/* 评论与评论之间的距离 */
.children_content
{
  margin-top: 30px;
}

.input_line{
  display: flex;
  flex-direction: row;
}
.input{
  width:80%;
}

.post{
  height:40px;
  margin-right:20px;
  margin-top:10px;
}

.post_text{
  margin-top:10px;
}
.divider{
  margin-top:10px;
}