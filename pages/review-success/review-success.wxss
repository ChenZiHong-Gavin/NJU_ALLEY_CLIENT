.modal {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(0, 0, 0, .8);
    z-index: 4;
}

.modal_view {
    height: 500rpx;
    width: 268rpx;
    position: absolute;
    left: 50%;
    margin-left: -134rpx;
    top: 400rpx;
}

.modal_close {
    color: #fff;
    width: 64rpx;
    height: 64rpx;
    text-align: center;
    line-height: 64rpx;
    bottom: 140rpx;
    left: 50%;
    margin-left: -32rpx;
    position:
        absolute;
    font-size: 64rpx;
    font-weight: 100;
}

.goodinfo {
    animation: goodinfo 1s forwards;
    animation-delay: 1s;
    text-align:
        center;
    color: #f9f9f9;
    width: 600rpx;
    margin-left: -166rpx;
    margin-top: 20rpx;
    transform: scale(0);
    opacity: 0;
}

.goodinfo image {
    width: 100rpx;
    height: 100rpx;
    border-radius: 50%;
    animation:
        goodinfoimage 1s forwards;
    animation-delay: 1s;
}

.goodinfo>view {
    width: 600rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    margin-top: 20rpx;
    font-size: 24rpx;
}

.box_head {
    animation: box_head 1s cubic-bezier(0, 0.2, 0, 1) forwards;
    animation-delay: .5s;
    z-index: 3;
    position: absolute;
    top: 140rpx;
    left: 0;
}

.box_body {
    animation: box_body 1s forwards;
    animation-delay: .5s;
    z-index: 2;
    position: absolute;
    left: 0;
    top: 210rpx;
}

@keyframes goodinfo {
    0% {
        transform: scale(0);
        opacity: 0;
    }

    50% {
        transform: scale(1.1);
        opacity: 1;
    }

    100% {
        transform: scale(1);
        opacity: 1;
    }
}

@keyframes goodinfoimage {
    0% {
        transform: rotate(0);
        opacity: 0;
    }

    100% {
        transform: rotate(360deg);
        opacity: 1;
    }
}

@keyframes box_head {
    0% {
        transform: translateY(0);
    }

    30% {
        transform: translateY(20rpx) rotate(2deg);
    }

    33% {
        transform: translateY(20rpx) rotate(0deg);
    }

    36% {
        transform: translateY(20rpx) rotate(-2deg);
    }

    39% {
        transform: translateY(20rpx) rotate(0deg);
    }

    42% {
        transform: translateY(20rpx) rotate(2deg);
    }

    45% {
        transform: translateY(20rpx) rotate(0deg);
    }

    100% {
        transform: translateY(-230rpx) rotate(0deg);
    }
}

@keyframes box_body {
    0% {
        transform: rotate(0) scale(1);
    }

    30% {
        transform: rotate(-2deg) scale(1.04);
    }

    40% {
        transform: rotate(0) scale(1);
    }

    450% {
        transform: rotate(1deg);
    }

    50% {
        transform: rotate(0);
    }

    55% {
        transform: rotate(-1deg);
    }

    60% {
        transform: rotate(0);
    }
}


