/* pages/post/post.wxss */
Page{
  width: 100%; height: 100%;
}

.header{
  display: flex;
  flex-direction: row;
  margin-left:20rpx;
}
.tag{
  margin-top:10rpx;
}
.title{
 
  margin-left:10rpx;
  font-size:50rpx;

}

.bts{
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  align-items:stretch;
  width:100%;
  height:10%;
  font-size:5rpx;
 

}
.goodButton{
  width:100%;
  background-color: white;
  display: flex;
  flex-direction: row;
  align-items: center;
}
.chatButton{
  width:100%;
  background-color: white;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.shareButton{
 width:100%;
  background-color: white;
  display: flex;
  flex-direction: row;
  align-items: center;
}
.author{
  display: flex;
  flex-direction: row;
  margin-left:20rpx;
}
.avatar{
  overflow: hidden;
  width: 64rpx;
  height: 64rpx;
  margin: 5rpx;
  border-radius: 50%;
  display: flex;
  justify-content: center;
  justify-items: center;
}
.nickname{
  margin-left: 10rpx;
  display:flex;
  align-items: center;
}
.timeStamp{
  margin-top:10rpx;
  margin-left:20rpx;
}
.postimg{
  margin-top:10rpx;
  display: flex;
  justify-content: center;
  justify-items: center;
}
.content{
  word-wrap:break-word;
  word-break:normal;
  margin-left:20rpx;
  margin-top: 20rpx;
  padding: 20rpx;
  right:10rpx;
  border: 5rpx solid rgb(89, 103, 110);
  position: relative;
  display:block;
  height:auto!important;
  height:200px;
}
.commentTitle{
  display: flex;
  flex-direction: row;
  justify-content:space-between;
  width:100%;
}
.commentUser{
  display: flex;
  flex-direction: row;
}
.commentAvatar{
  overflow: hidden;
  width: 50rpx;
  height: 50rpx;
  border-radius: 50%;
}
.commentNickname{
  display:flex;
  justify-items: center;
  margin-left: 10rpx;
  font-size: 30rpx;
}
.commentTimeStamp{
  font-size: 22rpx;
}
.commentContent{
  font-size: 33rpx;
}
.all{
  margin-bottom: 30rpx;
}