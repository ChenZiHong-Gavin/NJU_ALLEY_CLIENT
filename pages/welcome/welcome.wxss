/* pages/welcome/welcome.wxss */


.welcomeWord
{
  text-align: center;
  font-weight: 900;
  font-size: xx-large;
}


.deep-bar
{
  width: 20px;
  bottom: 20px;
}

.swiper_container
{
  margin-top: 50px;
  text-align: center;
  width: 100%;
  height: 300px;
}


.swiper-item
{
  width: 100%;
  height: auto;
}

.swiper-text
{
  color: grey;
}

.wx-swiper-dots
{
  position:relative;
}


.skip-container
{
  position: absolute;
  left: 10px;
  bottom: 20px;
  color: grey;
}

.next-container
{
  text-align: center;
  margin-top: 40px;
}
/* UI组件中只有向下的箭头，现在把它旋转270° */
.nextIcon
{
	transform: rotate(270deg);
}