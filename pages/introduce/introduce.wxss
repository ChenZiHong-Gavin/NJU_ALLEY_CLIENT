.swiper_container
{
  margin-top: 100px;
  text-align: center;
  width: 100%;
  height: 300px;
}
.wx-swiper-dots
{
  position:relative;
}

.aboutUs
{
    text-align: center;
    font-weight: 900;
    font-size: xx-large;
}
.swiper-text
{
  color: grey;
}

.next-container
{
text-align: center;
position: absolute;
bottom: 100px;
margin: auto;
left: 0;
right: 0;
}
/* UI组件中只有向下的箭头，现在把它旋转270° */
.nextIcon
{
	transform: rotate(270deg);
}

.copyRight
{
  font-size: xx-small;
  position: absolute;
  bottom: 30px;
  margin: auto;
  left: 0;
  right: 0;
