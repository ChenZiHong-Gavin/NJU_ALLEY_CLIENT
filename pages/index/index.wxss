/**index.wxss**/

page
{
  height: 100%;
  overflow: hidden;
}

.background {
  width: 100%;
  height: 100%;
  position:fixed; 
  background-size:100% 100%;
  z-index: -1;
}

.logo
{
  width: 50px;
  height: 50px;
  position: absolute;
  left: 20px;
  top: 20px;
}

.logo-image
{
  width: 100%;
  height: 100%;
}

.logo-text
{
  display: block;
  width: 100%;
  height: 100%;
  text-align: center;

}

.text-content
{
  width: 100%;
  color: white;
  font-size: 60px;
  font-weight: 900;
  position: absolute;
  left: 50%;
  top: 40%;
  transform: translateX(-50%) translateY(-50%);
  font-family:'楷体';
}

.begin
{
text-align: center;
position: absolute;
bottom: 100px;
margin: auto;
left: 0;
right: 0;
}

.flag-icon
{
animation: turnZ linear infinite;
animation-duration:3s;
}

/* 旋转动画 */
@keyframes turnZ{

  0%{transform:rotateZ(0deg);}

  50%{transform:rotateZ(270deg);}

  100%{transform:rotateZ(360deg);}

}

